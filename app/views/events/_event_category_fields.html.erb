<div class='nested-fields'>
  <div class="field">
    <%= f.label :種目名 %>
    <%= f.text_field :category_title %>
  </div>
  <div class="field">
    <%= f.label :種目詳細 %>
    <%= f.text_area :category_detail %>
  </div>

  <div class="nested">
    <label for="category">種目ポイント</label>
    <%= f.fields_for :category_results do |result| %>
      <%= render 'category_result_fields', f: result %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'ポイント入力', f, :category_results %>
    </div>
  </div>
  <%= link_to_remove_association "種目削除", f %>
</div>